<config>
    <!-- Motor settings without encoder -->
    <MotorType>BLDC</MotorType>
    <PWMMode>PWM</PWMMode>
    
    <Encoder>
        <Enabled>false</Enabled>
    </Encoder>
    
    <ControlMode>
        <Type>OpenLoop</Type>
    </ControlMode>
    
    <Voltage>
        <Max>30.0</Max>
        <Min>10.0</Min>
    </Voltage>
    
    <Current>
        <Max>50.0</Max>
        <Min>0.0</Min>
    </Current>
    
    <Temperature>
        <Max>80.0</Max>
        <Min>-20.0</Min>
    </Temperature>
    
    <Protection>
        <OverVoltage>true</OverVoltage>
        <UnderVoltage>true</UnderVoltage>
        <OverCurrent>true</OverCurrent>
        <OverTemp>true</OverTemp>
    </Protection>
    
    <Sensorless>
        <Enabled>true</Enabled>
        <StartupBoost>0.03</StartupBoost>
    </Sensorless>
    
    <FOC>
        <Enabled>false</Enabled>
    </FOC>
    
    <BMS>
        <Enabled>false</Enabled>
    </BMS>
    
    <PID>
        <Proportional>0.1</Proportional>
        <Integral>0.01</Integral>
        <Derivative>0.001</Derivative>
    </PID>
    
    <GPS>
        <Enabled>true</Enabled>
        <Port>/dev/ttyS0</Port>
        <BaudRate>9600</BaudRate>
        <UpdateRate>10</UpdateRate>
    </GPS>
</config>
